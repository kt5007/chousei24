<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Edit Ivent</h1>
        <%= form_for(@held) do |f| %>

          <div class="form-group">
            <%= f.label '画像' %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :event_name %>
            <%= f.text_field :event_name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label "開催予定日時" %>
            <%= f.datetime_select :held_time, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :address %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>          

          <div class="form-group">
            <%= f.label :helder %>
            <%= f.text_field :helder, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '編集', class: 'btn btn-black btn-block' %>
        <% end %>
        
        <%= link_to("/helds/#{@held.id}/destroy",{method:"post"}) do %>
           <button type="button" class: 'btn btn-black btn-block'>
             削除
           </button>
        <% end %>      
        
      </div>
    </div>
  </div>
</div>
