<!DOCTYPE html>
<html>
  <head>
    <title>Chousei24</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <span class="navbar-brand">Home</span>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          
          <% if logged_in? %>
            <li>
              <%= link_to participates_path do %>
                <span class="navbar-brand">参加予定イベント</span>
              <% end %>
            </li>
            <li>
              <%= link_to helds_new_path do %>
                <span class="navbar-brand">イベント作成</span>
              <% end %>
            </li>
            <li>
              <%= link_to helds_path do %>
                <span class="navbar-brand">主催中のイベント</span>
              <% end %>
            </li>
            <li>
              <%= link_to logout_path, method: :delete do %>
                <span class="navbar-brand">ログアウト</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to login_path do %>
                <span class="navbar-brand">ログイン</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    
    <%= yield %>
    
<script>
  $(function(){
    $(".alert").fadeOut(5000);
  });
</script>

  </body>
</html>
